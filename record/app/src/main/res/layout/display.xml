<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hello.joyce.record.display">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView11" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/correstView"
                android:layout_alignParentTop="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clean watch1"
                android:id="@+id/btn_clean1"
                android:onClick="true"
                android:layout_below="@+id/correstView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clean watch2"
                android:id="@+id/btn_clean2"
                android:onClick="true"
                android:layout_below="@+id/correstView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="165dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="watch2 data"
                android:id="@+id/btn_watch2"
                android:layout_below="@+id/correstView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="445dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="watch1 data"
                android:id="@+id/btn_watch1"
                android:layout_below="@+id/correstView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="310dp"/>
        </RelativeLayout>
    </ScrollView>





</RelativeLayout>
